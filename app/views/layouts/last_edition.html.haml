!!! 5
%html{ :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :charset => 'UTF-8' }
    %title RS on Rails · 1ª Edição
    %meta{ :name => 'description', :content => 'Evento real' }
    %meta{ :name => 'keywords', :content => '' }
    %meta{ :name => 'author', :content => '' }
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.1/jquery.min.js', 'shadowbox/shadowbox.js'
    = stylesheet_link_tag 'shadowbox.css', :media => 'screen, projection'
    :javascript 
      Shadowbox.init({
        overlayOpacity: .85
      });
    %link{ :rel => 'icon', :href => 'favicon.ico' }
  %body
    %header= render :partial => 'layouts/last_edition/header'
    #main= yield
    %footer= render :partial => 'layouts/last_edition/footer'
    :javascript 
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript 
      try {
        var pageTracker = _gat._getTracker("UA-12836132-1");
        pageTracker._trackPageview();
      } catch(err) {}